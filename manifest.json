{
  "name": "Reader",
  "manifest_version": 2,
  "version": "1.0",
  "background": {
    "scripts": [
      "json2.js",
      "background.js"
    ]  
  },
  "description": "Styling old pages for appropriate reading.",
  "content_scripts": [
    {
      "all_frames": true,
      "js": [ "reader.js" ],
      "css": [ "reader.css" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
    }
  ],
   "icons": {
      "128": "icon-128.png",
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png"
   },
  "page_action": {
    "default_icon": "icon-enabled.png",
    "default_title": "Turn reader on."
  },
  "permissions": [ "tabs", "http://*/*", "https://*/*" ]
}
